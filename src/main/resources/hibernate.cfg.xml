<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC 
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Configuracion Usuario MySQL -->

        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">admin</property>
        
        <!-- Configuraci칩n de la base de datos -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/dsw</property>

        <!-- Permite el manejo automatico del contexto de la sesion -->
        <property name="hibernate.current_session_context_class">thread</property>
        
        <!-- Opciones adicionales -->
        <property name="hibernate.connection.pool_size">1</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.use_sql_comments">true</property>
        <property name="hibernate.type.descriptor.sql.BasicBinder">TRACE</property>
        <!-- Ejecuci칩n autom치tica del archivo import.sql -->
        <!-- create-drop, update, validate o create -->
        <property name="hibernate.hbm2ddl.auto">update</property> 

        <!-- Configuraci칩n de las clases mapeadas -->
        
        <!-- Ejemplo: <mapping class="com.ejemplo.TuClaseEntidad"/> -->
        <mapping class="isi.deso.model.Bebida"/>
        <mapping class="isi.deso.model.Categoria"/>
        <mapping class="isi.deso.model.Cliente"/>
        <mapping class="isi.deso.model.Coordenada"/>
        <mapping class="isi.deso.model.ItemMenu"/>
        <mapping class="isi.deso.model.ItemsPedido"/>
        <mapping class="isi.deso.model.Plato"/>
        <mapping class="isi.deso.model.Pago"/>
        <mapping class="isi.deso.model.Pedido"/>
        <mapping class="isi.deso.model.Vendedor"/>

    </session-factory>
</hibernate-configuration>

