{
  "name": "vite-project",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "vite",
    "dev:backend": "nodemon --watch ../../backend/src/main/java --exec \"mvn -f ../../backend/pom.xml spring-boot:run\"",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "copy-to-backend": "xcopy /E /I /H /Y \"dist\\*.*\" \"../../backend/src/main/resources/static\"",
    "build-and-copy": "npm run build && npm run copy-to-backend",
    "build-and-run-backend": "npm run build-and-copy && mvn clean install && mvn spring-boot:run"
  },
  "dependencies": {
    "isbot": "^5.1.17",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.4.0",
    "react-router": "^7.0.2",
    "react-router-dom": "^7.0.2"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.6.3",
    "vite": "^5.4.11",
    "vite-tsconfig-paths": "^5.1.2"
  }
}
